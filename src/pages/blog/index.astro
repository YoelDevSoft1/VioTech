---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import HeroSection from '../../components/HeroSection.astro';

const posts = [
  {
    id: 'new-dashboard-features',
    title: '¿Por qué el mantenimiento TI es clave para tu PyME?',
    excerpt: "Descubre cómo el mantenimiento y soporte preventivo evitan caídas, pérdidas de datos y altos costos en tu empresa.",
    date: '15 de mayo de 2025',
    author: 'Sara Jiménez',
    authorRole: 'Especialista en Soporte TI',
    authorAvatar: 'https://randomuser.me/api/portraits/women/32.jpg',
    category: 'Mantenimiento TI',
    image: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'mobile-app-launch',
    title: 'Landing pages que convierten: casos y mejores prácticas',
    excerpt: 'Aprende cómo una página de aterrizaje bien diseñada puede aumentar tus contactos y ventas, y conoce ejemplos reales.',
    date: '28 de abril de 2025',
    author: 'Miguel Cárdenas',
    authorRole: 'Desarrollador Web',
    authorAvatar: 'https://randomuser.me/api/portraits/men/46.jpg',
    category: 'Páginas de Aterrizaje',
    image: 'https://images.unsplash.com/photo-1555774698-0b77e0d5fac6?auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'api-improvements',
    title: 'Automatización y soporte: cómo optimizar tu operación',
    excerpt: "Descubre cómo los procesos automatizados y el soporte remoto reducen tiempos muertos y mejoran la productividad.",
    date: '10 de abril de 2025',
    author: 'Emilia Rodríguez',
    authorRole: 'Consultora TI',
    authorAvatar: 'https://randomuser.me/api/portraits/women/65.jpg',
    category: 'Automatización',
    image: 'https://images.unsplash.com/photo-1581291518633-83b4ebd1d83e?auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'team-collaboration-tools',
    title: 'Administración tecnológica: tercerización y ventajas',
    excerpt: '¿Conviene tercerizar la gestión TI? Beneficios, retos y cómo elegir el mejor aliado para tu empresa.',
    date: '22 de marzo de 2025',
    author: 'David Wilches',
    authorRole: 'Consultor de Tecnología',
    authorAvatar: 'https://randomuser.me/api/portraits/men/22.jpg',
    category: 'Administración TI',
    image: 'https://images.unsplash.com/photo-1600880292203-757bb62b4baf?auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'security-enhancements',
    title: 'Ciberseguridad para PYMES: consejos prácticos',
    excerpt: "Las amenazas digitales no distinguen tamaño. Aprende cómo proteger tu información y cumplir normativas.",
    date: '5 de marzo de 2025',
    author: 'Jessica León',
    authorRole: 'Especialista en Seguridad Informática',
    authorAvatar: 'https://randomuser.me/api/portraits/women/45.jpg',
    category: 'Seguridad TI',
    image: 'https://images.unsplash.com/photo-1563013544-824ae1b704d3?auto=format&fit=crop&w=2070&q=80'
  },
  {
    id: 'integration-marketplace',
    title: 'Consultoría TI: cómo elegir la tecnología ideal para tu negocio',
    excerpt: 'Te guiamos para que tomes decisiones inteligentes sobre infraestructura, software y servicios digitales.',
    date: '18 de febrero de 2025',
    author: 'Roberto Quintero',
    authorRole: 'Consultor Digital',
    authorAvatar: 'https://randomuser.me/api/portraits/men/67.jpg',
    category: 'Consultoría',
    image: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=2070&q=80'
  }
];

const categories = [...new Set(posts.map(post => post.category))];
---

<Layout title="Blog - VioTech Solutions" description="Novedades, recursos y consejos sobre mantenimiento, soporte TI, páginas de aterrizaje y tecnología para PYMES colombianas.">
  <Header />
  <main>
    <HeroSection
      title="Novedades y Consejos TI"
      highlightText="Blog"
      description="Descubre recursos, casos prácticos y tendencias sobre soporte, mantenimiento, páginas de aterrizaje y digitalización para PYMES en Colombia."
    />

    <!-- Category Filter -->
    <div class="container-custom py-8">
      <div class="flex flex-wrap gap-4 justify-center mb-12">
        <a href="#" class="px-4 py-2 rounded-full bg-primary-600 text-white font-medium text-sm hover:bg-primary-700 transition-colors">
          Todos los artículos
        </a>
        {categories.map((category) => (
          <a href={'#' + category.toLowerCase().replace(/\s+/g, '-')} class="px-4 py-2 rounded-full bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 font-medium text-sm hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors">
            {category}
          </a>
        ))}
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post, index) => (
          <div class="card border border-gray-200 dark:border-gray-700 overflow-hidden slide-up" style={'animation-delay: ' + (index * 100) + 'ms'}>
            <a href={'/blog/' + post.id} class="block">
              <img
                src={post.image}
                alt={post.title}
                class="w-full h-48 object-cover"
                loading="lazy"
              />
            </a>
            <div class="p-6">
              <div class="flex items-center mb-4">
                <span class="text-sm font-medium text-primary-600 dark:text-primary-400">{post.category}</span>
                <span class="mx-2 text-gray-300 dark:text-gray-600">•</span>
                <span class="text-sm text-gray-500 dark:text-gray-400">{post.date}</span>
              </div>
              <a href={'/blog/' + post.id} class="block mb-3">
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white hover:text-primary-600 dark:hover:text-primary-400 transition-colors">{post.title}</h2>
              </a>
              <p class="text-gray-600 dark:text-gray-300 mb-6">{post.excerpt}</p>
              <div class="flex items-center">
                <img
                  src={post.authorAvatar}
                  alt={post.author}
                  class="w-10 h-10 rounded-full mr-3 object-cover"
                  loading="lazy"
                />
                <div>
                  <p class="font-medium text-gray-900 dark:text-white">{post.author}</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400">{post.authorRole}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-12 flex justify-center">
        <a href="#" class="btn-outline">
          Cargar más artículos
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v10.586l3.293-3.293a1 1 0 011.414 1.414l-5 5a1 1 0 01-1.414 0l-5-5a1 1 0 111.414-1.414L9 14.586V4a1 1 0 011-1z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
