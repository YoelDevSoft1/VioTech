                      <path d="M40 0 L60 32 L80 0 Z" fill="#06b6d4"/>
                      <path d="M80 0 L100 32 L120 0 Z" fill="#fde047"/>
                      <path d="M120 0 L140 32 L160 0 Z" fill="#f43f5e"/>
                      <path d="M160 0 L180 32 L200 0 Z" fill="#22d3ee"/>
                      <path d="M200 0 L220 32 L240 0 Z" fill="#818cf8"/>
                      <path d="M240 0 L260 32 L280 0 Z" fill="#a3e635"/>
                      <path d="M280 0 L300 32 L320 0 Z" fill="#fb7185"/>
                      <path d="M320 0 L330 16 L340 0 Z" fill="#facc15"/>
                    </g>
                  </svg>
